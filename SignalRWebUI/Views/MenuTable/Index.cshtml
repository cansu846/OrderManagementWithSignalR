
@model List<ResultMenuTableDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Tables</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Basic Table</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							This is the basic table view of the ready dashboard :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Table Name</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.MenuTableID</td>
										<td>@item.Name</td>
										<td>@item.Status</td>
										<td>
											<a href="/MenuTable/DeleteMenuTable/@item.MenuTableID" class="btn btn-outline-danger"> Delete </a>
										</td>
										<td>
											<a href="/MenuTable/UpdateMenuTable/@item.MenuTableID" class="btn btn-outline-success">Update</a>
										</td>
									</tr>
								}

							</tbody>
						</table>

						@* CategoryController içindeki [HttpGet] olarak işaretlenmiş CreateCategory metodunu tetikler.
						Kullanıcı, bu bağlantıya tıkladığında yeni bir kategori eklemek için bir form içeren View döndürülür. *@


						<a href="/MenuTable/CreateMenuTable/" class="btn btn-outline-info">Enter Category</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

