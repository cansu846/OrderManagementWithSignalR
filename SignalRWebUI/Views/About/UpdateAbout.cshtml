@model SignalRWebUI.Dtos.AboutDtos.UpdateAboutDto
@{
	ViewData["Title"] = "Create Product";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">About Operations Form</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post" action="/About/UpdateAbout">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Register New About</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								
								<label for="productname">Title</label>
								<input type="hidden" asp-for="AboutID">
								<input type="text" class="form-control" asp-for="Title" id="title" placeholder="Enter About Title">
								
								<label for="imageurl">Image Url</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">

								<label for="description">About Description</label>
								<input type="text" class="form-control" asp-for="Description" id="description">

							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-success">Update About</button>
							
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>